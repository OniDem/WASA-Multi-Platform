<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WASA_Multi_Platform.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WASA_Multi_Platform.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="250"
    Shell.TabBarBackgroundColor="#a3a3a3"
    Shell.TabBarIsVisible="False"
    Shell.FlyoutBackdrop="#a3a3a3"
    FlyoutBackgroundColor="#C0C0C0">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" >
        <ShellContent Title="Главная" ContentTemplate="{DataTemplate pages:MainPage}"/>
        <ShellContent Title="Товар" ContentTemplate="{DataTemplate pages:ProductShowPage}"/>
        <ShellContent Title="Узнать о товаре" ContentTemplate="{DataTemplate pages:BarcodeReaderPage}"/>
        <ShellContent Title="Настройки" ContentTemplate="{DataTemplate pages:SettingsPage}"/>
        <ShellContent Title="О приложении" ContentTemplate="{DataTemplate pages:AboutPage}"/>
    </FlyoutItem>
    <MenuItem Text="Выйти из учётной записи" x:Name="SessionExit" Clicked="SessionExit_Clicked"/>
</Shell>