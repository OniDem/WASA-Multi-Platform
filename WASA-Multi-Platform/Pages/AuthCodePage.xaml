<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WASA_Multi_Platform.Pages.AuthCodePage"
             Title="Авторизация"
             BackgroundColor="#C0C0C0">
    <VerticalStackLayout >
        <Label Text="Введите код для входа в приложение" FontSize="22" VerticalOptions="Start" HorizontalOptions="Center" Margin="10, 100, 10, 10"/>
        <Entry x:Name="CodeEntry" TextChanged="CodeEntry_TextChanged" MaxLength="4" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" HorizontalTextAlignment="Center" FontSize="30" Keyboard="Numeric"/>
        <Button Text="Проверить" x:Name="CheckCodeButton" Clicked="CheckCodeButton_Clicked" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" IsVisible="false"/>
    </VerticalStackLayout>
</ContentPage>