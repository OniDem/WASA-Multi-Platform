<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WASA_Multi_Platform.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label 
            Text="Page in Dev(in prod delete this label)"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Red"/>
        <Label Text="Настройки" FontSize="20" Margin="10" HorizontalOptions="Center"/>
        <Entry x:Name="Name" FontSize="14" Margin="15, 0, 15, 0"/>
        <Label Text="IP БД" FontSize="14" HorizontalOptions="Center"/>
        <Entry x:Name="IP" FontSize="14" Margin="15, 0, 15, 0"/>
        <Label Text="Порт БД" FontSize="14" HorizontalOptions="Center"/>
        <Entry x:Name="Port" FontSize="14" Margin="15, 0, 15, 0"/>
        <Label Text="Имя пользователя БД" FontSize="14" HorizontalOptions="Center"/>
        <Entry x:Name="UserName" FontSize="14" Margin="15, 0, 15, 0"/>
        <Label Text="Пароль пользователя БД" FontSize="14" HorizontalOptions="Center"/>
        <Entry x:Name="Password" FontSize="14" Margin="15, 0, 15, 0" IsPassword="True"/>
        <Button Text="Сохранить" x:Name="SaveButton" Clicked="SaveButton_Clicked" Margin="15"/>
    </VerticalStackLayout>
</ContentPage>